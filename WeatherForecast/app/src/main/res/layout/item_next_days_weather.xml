<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bind="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.example.tuananh.weatherforecast.viewmodel.NextDaysWeatherItemViewModel"/>
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:onClick="@{() -> viewModel.onClickItem()}">
        <TextView
            android:id="@+id/detailDay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:textSize="23sp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="8dp"
            android:layout_alignParentLeft="true"
            android:text="@{viewModel.dayOfWeek}"/>
        <TextView
            android:id="@+id/detailDayMonth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:layout_below="@+id/detailDay"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="2dp"
            android:text="@{viewModel.date}"/>
        <TextView
            android:id="@+id/dtMinMaxTemp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:textSize="18sp"
            android:layout_centerVertical="true"
            android:textColor="#ffffff"
            android:text="@{viewModel.maxMinTemp}"/>
        <ImageView
            android:id="@+id/dtImgViewSky"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_toLeftOf="@+id/dtMinMaxTemp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="8dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            bind:imageUrl="@{viewModel.imageIconUrl}"/>

    </RelativeLayout>

</layout>